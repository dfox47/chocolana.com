{% if languages|length > 1 %}
	<form class="lang" action="{{ action }}" method="post" enctype="multipart/form-data">
		{% for language in languages %}
			{% if language.code == code %}
				{#<img src="/catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}">#}
				<span>{{ language.name }}</span><i class="fa fa-caret-down"></i>
			{% endif %}
		{% endfor %}

		<ul>
			{% for language in languages %}
				{% if language.code == code %}
				{% else %}
					<li>
						{#<img src="/catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" data-name="{{ language.code }}" />#}
						<span data-name="{{ language.code }}">{{ language.name }}</span>
					</li>
				{% endif %}
			{% endfor %}
		</ul>

		<input type="hidden" name="code" value="" />
		<input type="hidden" name="redirect" value="{{ redirect }}" />
	</form>
{% endif %}
